<h1 class="mt-4">Listagem de Produtos</h1>
<a href="/produto/create" class="btn btn-success mb-3">Adicionar Produto</a>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Preço</th>
      <th>Estoque</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each produtos}}
    <tr>
      <td>{{this.nome}}</td>
      <td>{{this.preco}}</td>
      <td>{{this.estoque}}</td>
      <td>
        <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#modalProduto{{this.id}}">
          Visualizar
        </button>
        <a href="/produto/update/{{this.id}}" class="btn btn-primary">Editar</a>
        <form action="/produto/delete/{{this.id}}" method="post" style="display:inline;">
          <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
      </td>
    </tr>

    <!-- Modal informações produto -->
    <div class="modal fade" id="modalProduto{{this.id}}" tabindex="-1" aria-labelledby="modalProdutoLabel{{this.id}}" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalProdutoLabel{{this.id}}">Detalhes do Produto</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p><strong>Nome:</strong> {{this.nome}}</p>
            <p><strong>Preço:</strong> R$ {{this.preco}}</p>
            <p><strong>Estoque:</strong> {{this.estoque}}</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </tbody>
</table>
